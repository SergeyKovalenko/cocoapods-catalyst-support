require 'cocoapods-catalyst-support'

# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

use_frameworks!

target 'Sample' do
  pod 'AppCenter/Analytics'
  pod 'Firebase/Analytics'
end

#Show debug traces
debug!

#Configure your macCatalyst dependencies
catalyst_configuration do
	macos 'AppCenter/nalytics' #This dependency will only be available only for iOS
	macos 'AppCenter/lytics' #This dependency will only be available only for iOS
	ios 'FirebaseAnalytics' #This dependency will only be available only for macOS
end

#Configure your macCatalyst App
post_install do |installer|
	installer.confiure_catalyst
end
